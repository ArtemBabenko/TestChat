<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="8dp"
        android:foreground="?selectableItemBackground"
        card_view:cardBackgroundColor="@color/CardBackground"
        card_view:cardCornerRadius="8dp"
        card_view:contentPadding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iconUser"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/profile"
                app:border_color="#FF000000"/>

            <TextView
                android:id="@+id/nameUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iconUser"
                android:layout_toRightOf="@+id/iconUser"
                android:text="Name User"
                android:textColor="@color/colorUserName"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameUser"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/iconUser"
                android:layout_toRightOf="@+id/iconUser"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_image_loading"
                app:riv_border_color="@color/colorUserName"
                app:riv_border_width="0dip"
                app:riv_corner_radius="10dip"
                app:riv_mutate_background="true"
                app:riv_oval="false"
                app:riv_tile_mode="repeat"/>

            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:id="@+id/messageUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageUser"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/iconUser"
                android:text="text"
                android:textColor="@color/colorUserMassage"
                android:textSize="15dp"
                app:emojiconSize="28sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/messageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="time"
        android:textColor="@color/colorUserMassage"
        android:textSize="12dp"/>
</RelativeLayout>