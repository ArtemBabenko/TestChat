<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_room_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"
        android:layout_centerVertical="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="35dp"
        card_view:cardCornerRadius="8dp"
        card_view:contentPadding="4dp"
        card_view:cardBackgroundColor="@color/CardBackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp">
            <ImageView
                android:id="@+id/iconRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/ic_room"/>
            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:id="@+id/nameRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iconRoom"
                android:layout_toEndOf="@+id/iconRoom"
                android:textColor="@color/colorUserName"
                app:emojiconSize="28sp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Room Name"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ImageView
        android:id="@+id/lock_image"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>